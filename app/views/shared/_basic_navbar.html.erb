<div class="navbar no-margin">
  <div class="container-fluid red">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-inverse-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to(image_tag("logo-red.png", height: "50px"), root_path) %>
    </div>
    <div class="navbar-collapse collapse navbar-inverse-collapse">
      <ul class="nav navbar-nav">
        <li class="<%= 'active' if controller_name == 'contests' %>"><%= link_to t("models.contests"), contests_path %></li>
        <li class="<%= 'active' if controller_name == 'problems' %>"><%= link_to t("models.problems"), problems_path %></li>
        <% if admin %>
            <li class="<%= 'active' if controller_name == 'users' %>"><%= link_to t("models.users"), users_path %></li>
        <% end %>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <%= user_menu %>
      </ul>
      <% if current_user %>
          <%= form_tag("/search", method: :get, class: "navbar-form navbar-right") do |f| %>
          <p>
            <%= text_field_tag :search, params[:search], class: "form-control col-md-8", placeholder: "Busqueda" %>
          </p>
          <% end %>
      <% end %>
    </div>
  </div>
</div>