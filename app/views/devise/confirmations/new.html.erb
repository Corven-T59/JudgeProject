<div class="big-padding red no-float col-md-4 col-md-offset-4">
  <%= link_to(image_tag("logo-red.png", width: "300px", class: "center-block top-space"), root_path) %>
  <div class="panel panel-default top-space">
    <div class="panel-heading"><h3>Instrucciones de confirmaci√≥n</h3></div>
    <div class="panel-body">

      <%= form_for(resource, as: resource_name, url: user_confirmation_path(),
                   html: {method: :post},
                   builder: BootstrapFormBuilder) do |f| %>
          <%= devise_error_messages! %>

          <%= f.email_field :email, autofocus: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
          <%= f.submit "Enviar" %>
      <% end %>
    </div>
    <div class="panel-footer">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
