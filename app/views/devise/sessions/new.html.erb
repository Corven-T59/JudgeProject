<div class="big-padding red no-float col-md-4 col-md-offset-4">
  <%= link_to(image_tag("logoCHJ_blanco.png", width: "300px", class: "center-block top-space"), root_path) %>
  <div class="panel panel-default top-space">
    <div class="panel-heading"><h3><%= t('.sign_in') %> </h3></div>
    <div class="panel-body">

      <%= form_for(resource, as: resource_name, url: session_path(resource_name),
                   builder: BootstrapFormBuilder) do |f| %>

          <%= f.email_field :email, autofocus: true %>

          <%= f.password_field :password, autocomplete: "off" %>

          <% if devise_mapping.rememberable? -%>
              <%= f.toggle_button :remember_me; %>
          <% end -%>

          <%= f.submit t('.sign_in') %>
      <% end %>
    </div>
    <div class="panel-footer">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>