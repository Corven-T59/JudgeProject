<div class="big-padding no-float col-md-8 col-md-offset-2">
  <div class="panel panel-default top-space">
    <div class="panel-heading"><h2><%= t('.title', resource: resource_class.model_name.human) %></h2></div>
    <div class="panel-body">

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {method: :put},
                   builder: BootstrapFormBuilder) do |f| %>
          <%= devise_error_messages! %>
          <%= f.email_field :email, autofocus: true %>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div><%= t('.currently_waiting_confirmation_for_email', email: resource.unconfirmed_email) %></div>
          <% end %>
          <%= f.text_field :handle, placeholder: "Codeforces hanlde" %>
          <i>(<%= t('.leave_blank_if_you_don_t_want_to_change_it') %>)</i><br/>
          <%= f.password_field :password, autocomplete: "off" %>
          <% if @minimum_password_length %>
              <br/>
              <em><%= @minimum_password_length %> characters minimum</em>
          <% end %>
          <%= f.password_field :password_confirmation, autocomplete: "off" %>
          <i>(<%= t('.we_need_your_current_password_to_confirm_your_changes') %>)</i><br/>
          <%= f.password_field :current_password, autocomplete: "off" %>
          <%= f.submit t('.update') %>

      <% end %>

    </div>
    <div class="panel-footer">
      <h3><%= t('.cancel_my_account') %></h3>
      <p><%= t('.unhappy') %> <%= button_to t('.cancel_my_account'), registration_path(resource_name), data: {confirm: t('.are_you_sure')}, method: :delete %></p>
    </div>
  </div>
</div>