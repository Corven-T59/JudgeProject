<div class="big-padding red no-float col-md-4 col-md-offset-4">
  <%= link_to(image_tag("logoCHJ_blanco.png", width: "300px", class: "center-block top-space"), root_path) %>
  <div class="panel panel-default top-space">
    <div class="panel-heading"><h3><%= t('.forgot_your_password') %></h3></div>
    <div class="panel-body">

      <%= form_for(resource, as: resource_name, url: password_path(resource_name),
                   html: {method: :post},
                   builder: BootstrapFormBuilder) do |f| %>
          <%= devise_error_messages! %>

          <%= f.email_field :email, autofocus: true %>
          <%= f.submit t('.send_me_reset_password_instructions') %>
      <% end %>

    </div>
    <div class="panel-footer">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>