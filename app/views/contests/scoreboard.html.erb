<div class="fresh-table toolbar-color-red">

  <div class="toolbar">
    <%= link_to(image_tag("logo-red.png", height: "50px"), root_path) %>
    <h4 class="btn btn-default no-padding no-margin medium" style="margin-top: 18px;">Scoreboard</h4>
  </div>

  <table id="fresh-table" class="table">
    <thead>
    <th data-field="id">#</th>
    <th data-field="name">Email</th>
    <% @problems.each do |problem| %>
      <%= content_tag(:th,problem.name,data: {field: problem.baseName}) %>
    <% end %>
    <th data-field="actions" data-formatter="operateFormatter" data-events="operateEvents">Actions</th>
    </thead>
    <tbody>
    <% u = @user_scores%>
    <% @user_scores.each_with_index do |user_score,i| %>
      <tr>
        <td><%= i + 1 %></td>
        <td><%= user_score.user.email%></td>
        <% @color_cache.each do |cache| %>
          <td>
            <%= flag_and_tries user_score, cache%>
          </td>
        <% end %>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
