  </div>

 <div class="field">
    <%= f.label :difficulty %>
    <%= f.select :difficulty, Contest.difficulties.keys %>
  </div>

  <div class="field">
    <%= f.label :startDate %>
    <%= f.datetime_select :startDate %>
  </div>

  <div class="field">
    <%= f.label :endDate %>
    <%= f.datetime_select :endDate %>
  </div>
  
 
  <div class="field">
    <%= collection_check_boxes(:contest, :problem_ids, Problem.all, :id, :name) %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
